<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="org.eclipse.ui.propertyPages">
      <page
            category="org.omnetpp.main.OmnetppCategory"
            class="org.omnetpp.cdt.ui.BuildSpecPropertyPage"
            id="org.omnetpp.cdt.BuildSpec"
            name="C++ Makefile Generation">
         <enabledWhen>
             <adapt type="org.eclipse.core.resources.IProject">
               <and>
                  <test property="org.eclipse.core.resources.projectNature" value="org.omnetpp.main.omnetppnature"/>
                  <test property="org.eclipse.core.resources.projectNature" value="org.eclipse.cdt.core.ccnature"/>
               </and>
             </adapt>         
         </enabledWhen>
      </page>
   </extension>
   <extension
         id="MakefileBuilder"
         name="OMNeT++ Makefile Builder"
         point="org.eclipse.core.resources.builders">
      <builder
            hasNature="false">
         <run
               class="org.omnetpp.cdt.makefile.MakefileBuilder">
         </run>
      </builder>
   </extension>
   <extension
         id="makefileproblem"
         name="Makefile Problem"
         point="org.eclipse.core.resources.markers">
      <persistent
            value="false">
      </persistent>
      <super
            type="org.eclipse.core.resources.problemmarker">
      </super>
   </extension>
   <extension
         id="org.omnetpp.cdt.managedbuilderid"
         name="OMNeT++ managed builder"
         point="org.eclipse.cdt.managedbuilder.core.buildDefinitions">
      <tool
            command="perl C:\Work\Projects\omnest\omnetpp4\omnetpp\bin\opp_msgc"
            commandLinePattern="${COMMAND} ${INPUTS}"
            id="org.omnetpp.tool.msgc"
            name="Message compiler">
         <inputType
               id="org.omnetpp.cdt.MSGinputType"
               name="MSG file"
               sources="msg">
         </inputType>
         <outputType
               id="org.omnetpp.cdt.CCoutputType"
               name="CC file"
               namePattern="%_m.cc"
               outputContentType="org.eclipse.cdt.core.cxxSource"
               outputs="cc"
               primaryInputType="org.omnetpp.cdt.MSGinputType"
               primaryOutput="true">
         </outputType>
      </tool>
   </extension>

</plugin>
