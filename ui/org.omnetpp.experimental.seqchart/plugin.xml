<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         point="org.eclipse.ui.editors">
      <editor
            name="OMNeT++/OMNEST Event Log Table"
            extensions="log"
            icon="icons/sample.gif"
            contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor"
            class="org.omnetpp.eventlogtable.editors.EventLogTableEditor"
            id="org.omnetpp.eventlogtable.editors.EventLogTableEditor">
      </editor>
   </extension>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="OMNeT++/OMNEST"
            id="org.omnetpp">
      </category> <!-- FIXME does not show up for some reason -->
      <view
            name="OMNeT++/OMNEST Event Log Table"
            icon="icons/sample.gif"
            category="viewtest"
            class="org.omnetpp.eventlogtable.editors.EventLogTableView"
            id="org.omnetpp.eventlogtable.editors.EventLogTableView">
      </view>
   </extension>
   
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.ui.resourcePerspective">
         <view
               relationship="bottom"
               id="org.omnetpp.eventlogtable.editors.EventLogTableView">
         </view>
      </perspectiveExtension>
   </extension>

</plugin>
