<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         point="org.eclipse.ui.editors">
      <editor
            name="OMNeT++ Analysis"
            extensions="scave"
            icon="icons/sample.gif"
            contributorClass="org.omnetpp.scave2.editors.ScaveEditorContributor"
            class="org.omnetpp.scave2.editors.ScaveEditor"
            id="org.omnetpp.scave2.editors.ScaveEditor">
      </editor>
   </extension>
   
   <extension
         id="org.omnetpp.scave.content-types"
         name="Scave content types"
         point="org.eclipse.core.runtime.contentTypes">
      <content-type
            file-extensions="sca"
            id="org.omnetpp.scave.content-type.scalar"
            name="Scalar result file"
            priority="normal"/>
      <content-type
            file-extensions="vec"
            id="org.omnetpp.scave.content-type.vector"
            name="Vector result file"
            priority="normal"/>
   </extension>

  <extension
        point="org.eclipse.ui.newWizards">
     <category
           id="org.omnetpp.Wizard.category.ID"
           name="OMNEST/OMNeT++ Wizards"/>
     <wizard
           category="org.omnetpp.Wizard.category.ID"
           class="org.omnetpp.scave2.wizard.ScaveModelWizard"
           icon="icons/full/obj16/ScaveModelModelFile.gif"
           id="org.omnetpp.scave2.wizard.ScaveModelModelWizardID"
           name="Analysis">
        <description>
           Create a new Analysis
        </description>
        <selection class="org.eclipse.core.resources.IResource"/>
     </wizard>
  </extension>

</plugin>
