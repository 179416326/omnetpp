dnl Process this file with autoconf to produce a configure script.
AC_INIT(src/nedc/jar.c)

dnl Checks for programs.
AC_PROG_YACC
AC_PROG_CC
AC_PROG_LEX

dnl Checks for libraries.
dnl Replace `main' with a function in -lX11:
AC_CHECK_LIB(X11, main)
dnl Replace `main' with a function in -lcmdenv:
AC_CHECK_LIB(cmdenv, main)
dnl Replace `main' with a function in -ldl:
AC_CHECK_LIB(dl, main)
dnl Replace `main' with a function in -lenvir:
AC_CHECK_LIB(envir, main)
dnl Replace `main' with a function in -lgpvm3:
AC_CHECK_LIB(gpvm3, main)
dnl Replace `main' with a function in -lm:
AC_CHECK_LIB(m, main)
dnl Replace `main' with a function in -lpvm3:
AC_CHECK_LIB(pvm3, main)
dnl Replace `main' with a function in -lsim_pvm:
AC_CHECK_LIB(sim_pvm, main)
dnl Replace `main' with a function in -lsim_std:
AC_CHECK_LIB(sim_std, main)
dnl Replace `main' with a function in -lstdc:
AC_CHECK_LIB(stdc, main)
dnl Replace `main' with a function in -ltcl:
AC_CHECK_LIB(tcl, main)
dnl Replace `main' with a function in -ltk:
AC_CHECK_LIB(tk, main)
dnl Replace `main' with a function in -ltkenv:
AC_CHECK_LIB(tkenv, main)
dnl Replace `main' with a function in -ltv:
AC_CHECK_LIB(tv, main)
dnl Replace `main' with a function in -ltvenv:
AC_CHECK_LIB(tvenv, main)

dnl Checks for header files.
AC_HEADER_STDC
AC_CHECK_HEADERS(malloc.h unistd.h)

dnl Checks for typedefs, structures, and compiler characteristics.
AC_C_CONST
AC_C_INLINE
AC_TYPE_SIZE_T
AC_STRUCT_TM

dnl Checks for library functions.
AC_FUNC_ALLOCA
AC_FUNC_MEMCMP
AC_TYPE_SIGNAL
AC_FUNC_VPRINTF
AC_CHECK_FUNCS(select strdup strspn strstr)

AC_OUTPUT(samples/pvmex/makefile src/gned/makefile samples/fifo1/makefile samples/fifo2/makefile samples/fddi/makefile src/envir/makefile samples/hist/makefile src/envir/tvenv/makefile src/sim/makefile samples/token/makefile src/envir/cmdenv/makefile src/utils/makefile samples/nim/makefile samples/hcube/makefile models/support/makefile samples/dyna/makefile src/nedc/makefile src/envir/tkenv/makefile)
