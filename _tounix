for i in `find . -name 'Makefile*' -o -name '*.h' -o -name '*.cc' -o -name '*.c' -o -name '*.ned' -o -name '*.y' -o -name '*.lex' -o -name src/utils/install-prog -o -name src/utils/install-lib`
do
    echo Removing ^M, $i
    cp $i $i.b
    sed 's/[[:cntrl:]]$//g' $i.b > $i
    rm $i.b
done

