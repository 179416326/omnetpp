#!/bin/sh                                                                                                         
if [ -n "$1" ] ; then
  echo Please change to the directory you want to convert and run the script there without any comnmand line argument!
  exit 1
fi

echo                                                                                                              
echo Press ENTER to convert all MSG files starting from the current directory:
echo `pwd`                                                                                                        
echo                                                                                                              
read WAIT                                                                                                         
find . -name "*.msg" >msgfiles.lst
nedtool -P @msgfiles.lst
