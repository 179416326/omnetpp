#
# Global definitions
#
!include ..\..\configuser.vc

!if "$(LIB_SUFFIX)"==".dll"
CFLAGS=$(CFLAGS) -DWIN32_DLL
!endif

#
# Local definitions
#
COPTS=$(CFLAGS) -I. -I../../src/common -I../../include/platdep /Fd"filereadertest.pdb"

OBJS= fileechotest.obj filereadertest.obj
LIBS= ../../lib/common.lib

#
# Automatic rules
#
.SUFFIXES : .cc

.cc.obj:
	$(CXX) /Fo"$@" $(COPTS) /c /Tp $<

#
# Targets (TBD: build dll)
#
all: fileechotest.exe filereadertest.exe

fileechotest.exe: fileechotest.obj $(LIBS)
	$(LINK) $(LDFLAGS) /nologo /out:fileechotest.exe fileechotest.obj $(LIBS)

filereadertest.exe: filereadertest.obj $(LIBS)
	$(LINK) $(LDFLAGS) /nologo /out:filereadertest.exe filereadertest.obj $(LIBS)

depend:
	$(MAKEDEPEND) -I. -fMakefile.vc -- *.cc

clean:
	- del *.obj 2> nul
	- del *.ilk *.idb *.pdb *.lib *.exe 2> nul


