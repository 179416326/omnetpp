%description:
Test operators in NED, with constant (non-volatile) parameters.

%file: test.ned

simple Test
{
    parameters:
        double p00 = -3;      // unary minus or negative constant
        double p01 = -(4+1);  // unary minus

        double p02 = toint(!true);  // negation
        double p03 = toint(!false); // negation

        double p06 = ~3;    // bitwise complement (result should be positive)
        double p07 = 12^3;  // power of
        double p08 = 12*3;  // multiply
        double p09 = 12/3;  // divide
        double p10 = 12%5;  // modulus
        double p11 = 12+3;  // add
        double p12 = 12-3;  // subtract

        double p13 = 10<<2; // bitwise shifting
        double p14 = 10>>2; // bitwise shifting

        double p15 = 10&3;  // bitwise and
        double p16 = 10|3;  // bitwise or
        double p17 = 10#3;  // bitwise xor

        double p18 = toint(8==3); // equal
        double p19 = toint(8==8); // equal

        double p20 = toint(8!=3); // not equal
        double p21 = toint(8!=8); // not equal

        double p22 = toint(8>3);  // greater
        double p23 = toint(3>8);  // greater
        double p24 = toint(8>8);  // greater

        double p25 = toint(8>=3); // greater or equal
        double p26 = toint(3>=8); // greater or equal
        double p27 = toint(8>=8); // greater or equal

        double p28 = toint(8<3);  // less
        double p29 = toint(3<8);  // less
        double p30 = toint(8<8);  // less

        double p31 = toint(8<=3); // less or equal
        double p32 = toint(3<=8); // less or equal
        double p33 = toint(8<=8); // less or equal

        double p34 = toint(true && true);   // logical and
        double p35 = toint(true && false);  // logical and
        double p36 = toint(false && true);  // logical and
        double p37 = toint(false && false); // logical and

        double p38 = toint(true || true);   // logical or
        double p39 = toint(true || false);  // logical or
        double p40 = toint(false || true);  // logical or
        double p41 = toint(false || false); // logical or

        double p42 = toint(true ## true);   // logical xor
        double p43 = toint(true ## false);  // logical xor
        double p44 = toint(false ## true);  // logical xor
        double p45 = toint(false ## false); // logical xor

        double p46 = (true ? 5 : 2);  // the C/C++ ``inline if''
        double p47 = (false ? 5 : 2); // the C/C++ ``inline if''
}

%file: test.cc

#include <omnetpp.h>

namespace {} {

class Test : public cSimpleModule
{
  public:
    Test() : cSimpleModule(16384) { }
    virtual void activity();
};

Define_Module(Test);

void Test::activity()
{
    for (int i=0; i<params(); i++)
        ev << par(i).name() << "=" << par(i).doubleValue() << endl;
    ev << ".\n";
}

}; //namespace

