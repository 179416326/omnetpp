%description:
Test channel delay in NED.

%file: test.ned

channel MyConn extends cBasicChannel
{
    parameters:
        delay = 0.004;
}

simple Node1
{
    gates:
        output out;
}

simple Node2
{
    gates:
        input in;
}

network Test
{
    submodules:
        node1: Node1;
        node2: Node2;
    connections:
        node1.out --> MyConn --> node2.in;
}

%file: test.cc

#include <omnetpp.h>

namespace {} {

class Node1 : public cSimpleModule
{
  public:
    Node1() : cSimpleModule(16384) { }
    virtual void activity();
};

Define_Module(Node1);

void Node1::activity()
{
    for (int i=0; i<100; i++)
    {
        cMessage *msg = new cMessage();
        msg->setLength((long)exponential(1000));  // delay should not depend on message length
        send(msg, "out");
        wait(exponential(1.0));
    }
}

class Node2 : public cSimpleModule
{
    int total;
    int errors;

  public:
    Node2() : cSimpleModule(16384) { }
    virtual void activity();
};

Define_Module(Node2);

void Node2::activity()
{
    for(;;)
    {
        cMessage *msg = receive();
        simtime_t delay = simTime() - msg->sendingTime();
        ev << "delay=" << delay << ", (diff-0.004)=" << (delay-0.004) << endl;
        if (fabs(SIMTIME_DBL(delay-0.004)) > 1e-14)
            ev << "wrong delay" << endl;
        delete msg;
    }
}

}; //namespace

%not-contains: stdout
wrong delay

