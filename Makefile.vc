#=====================================================================
#
# toplevel makefile for OMNeT++ libraries and programs
#
#=====================================================================

#
# Directories
#
!include configuser.vc

MAKEFILE=/F Makefile.vc

#=====================================================================
#
# Main targets
#
#=====================================================================


all: check-env components

components: libs progs install-local samples


#=====================================================================
#
# OMNeT++ components
#
#=====================================================================

LIBS=sim envir cmdenv tkenv tvenv
PROGS=utils nedc gned plove
SAMPLES=dyna fddi fifo1 fifo2 hcube hist nim pvmex token demo

#
# Group targets. Note that utils has to be built BEFORE other libs and progs
# because tcl2c might be needed to build tkenv or gned.
#
libs: utils $(LIBS)
progs: $(PROGS)
samples: $(SAMPLES)


#
# Libraries
#

sim:
	cd /d $(OMNETPP_SRC_DIR:/=\)\sim && $(MAKE) $(MAKEFILE)

envir:
	cd /d $(OMNETPP_SRC_DIR:/=\)\envir && $(MAKE) $(MAKEFILE)

cmdenv:
	cd /d $(OMNETPP_SRC_DIR:/=\)\cmdenv && $(MAKE) $(MAKEFILE)

tkenv:
	cd /d $(OMNETPP_SRC_DIR:/=\)\tkenv && $(MAKE) $(MAKEFILE)

tvenv:
	cd /d $(OMNETPP_SRC_DIR:/=\)\tvenv && $(MAKE) $(MAKEFILE)


#
# Programs
#

nedc:
	cd /d $(OMNETPP_SRC_DIR:/=\)\nedc && $(MAKE) $(MAKEFILE)

gned:
	cd /d $(OMNETPP_SRC_DIR:/=\)\gned && $(MAKE) $(MAKEFILE)

plove:
	@ # needs no build

utils:
	cd /d $(OMNETPP_SRC_DIR:/=\)\utils &&  $(MAKE) $(MAKEFILE)

#
# Sample programs
#

dyna:
	cd /d $(OMNETPP_SAMPLES_DIR:/=\)\dyna && $(MAKE) $(MAKEFILE)

fddi:
	cd /d $(OMNETPP_SAMPLES_DIR:/=\)\fddi && $(MAKE) $(MAKEFILE)

fifo1:
	cd /d $(OMNETPP_SAMPLES_DIR:/=\)\fifo1 && $(MAKE) $(MAKEFILE)

fifo2:
	cd /d $(OMNETPP_SAMPLES_DIR:/=\)\fifo2 && $(MAKE) $(MAKEFILE)

hcube:
	cd /d $(OMNETPP_SAMPLES_DIR:/=\)\hcube && $(MAKE) $(MAKEFILE)

hist:
	cd /d $(OMNETPP_SAMPLES_DIR:/=\)\hist && $(MAKE) $(MAKEFILE)

nim:
	cd /d $(OMNETPP_SAMPLES_DIR:/=\)\nim && $(MAKE) $(MAKEFILE)

pvmex:
	cd /d $(OMNETPP_SAMPLES_DIR:/=\)\pvmex && $(MAKE) $(MAKEFILE)

token:
	cd /d $(OMNETPP_SAMPLES_DIR:/=\)\token && $(MAKE) $(MAKEFILE)

demo:
	cd /d $(OMNETPP_SAMPLES_DIR:/=\)\demo && $(MAKE) $(MAKEFILE)

#=====================================================================
#
# Utilities
#
#=====================================================================


check-env:
	@ echo *** TBD check-env

clean:
	-for %%i in ( $(LIBS) $(PROGS) ) do \
	    cd $(OMNETPP_SRC_DIR:/=\)\%%i && $(MAKE) $(MAKEFILE) clean
#	-for %%i in ( $(SAMPLES) ) do \
#	    cd $(OMNETPP_SAMPLES_DIR:/=\)\%%i && $(MAKE) $(MAKEFILE) clean

depend:
	for %%i in ( $(LIBS) $(PROGS) ) do \
	    cd $(OMNETPP_SRC_DIR:/=\)\%%i && $(MAKE) $(MAKEFILE) depend
#	for %%i in ( $(SAMPLES) ) do \
#	    cd $(OMNETPP_SAMPLES_DIR:/=\)\%%i && $(MAKE) $(MAKEFILE) depend

install-local:
	for %%i in ( $(LIBS) $(PROGS) ) do \
	    cd $(OMNETPP_SRC_DIR:/=\)\%%i && $(MAKE) $(MAKEFILE) install-local

