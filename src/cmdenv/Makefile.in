# Definitions to be customized by 'configure'
CXX=@CXX@
AS=@AS@
AR=@AR@
MAKE_SO=@MAKE_SO@

CFLAGS=@CFLAGS@

OMNETPP_ROOT=@OMNETPP_ROOT@
OMNETPP_SRC_DIR=@OMNETPP_SRC_DIR@
OMNETPP_INCL_PATH=@OMNETPP_INCL_PATH@
OMNETPP_INCLUDES=@OMNETPP_INCLUDES@
LIB_SUFFIX=@LIB_SUFFIX@

# Local definitions
ENVIR_INCLUDES=../envir/args.h ../envir/cinifile.h ../envir/omnetapp.h ../envir/slaveapp.h
CMDENV_INCLUDES=cmdenv.h enumstr.h
INCL_PATH=-I../envir

INCLUDES=$(OMNETPP_INCLUDES) $(ENVIR_INCLUDES) $(CMDENV_INCLUDES)
COPTS=$(CLFAGS) $(OMNETPP_INCL_PATH) $(INCL_PATH)

OBJS = cmdenv.o enumstr.o heap.o

all : libcmdenv.$(LIB_SUFFIX)

libcmdenv.a : $(OBJS)
	$(AR) libcmdenv.a $(OBJS)

libcmdenv.so : $(OBJS)
	$(MAKE_SO) libcmdenv.so $(OBJS)

cmdenv.o : cmdenv.cc $(INCLUDES)
	$(CXX) -c $(COPTS) cmdenv.cc

enumstr.o : enumstr.cc $(INCLUDES)
	$(CXX) -c $(COPTS) enumstr.cc

heap.o : heap.cc $(INCLUDES)
	$(CXX) -c $(COPTS) heap.cc

