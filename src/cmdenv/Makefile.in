#
# Definitions to be customized by 'configure'
#
CXX=@CXX@
AR=@AR@
SHLIB_LD=@SHLIB_LD@
RANLIB=@RANLIB@

CFLAGS=@CFLAGS@

OMNETPP_INCL_DIR=@OMNETPP_INCL_DIR@

# LIB_SUFFIX is either A_LIB_SUFFIX or SO_LIB_SUFFIX
LIB_SUFFIX=@LIB_SUFFIX@

A_LIB_SUFFIX=@A_LIB_SUFFIX@
SO_LIB_SUFFIX=@SO_LIB_SUFFIX@

#
# Local definitions
#
COPTS=$(CLFAGS) -I$(OMNETPP_INCL_DIR) -I../envir

OBJS = cmdenv.o enumstr.o heap.o

#
# Targets
#
all: libcmdenv$(LIB_SUFFIX)

libcmdenv$(A_LIB_SUFFIX) : $(OBJS)
	$(AR) libcmdenv$(A_LIB_SUFFIX) $(OBJS)
	$(RANLIB) libcmdenv$(A_LIB_SUFFIX)

libcmdenv$(SO_LIB_SUFFIX) : $(OBJS)
	$(SHLIB_LD) -o libcmdenv$(SO_LIB_SUFFIX) $(OBJS)

cmdenv.o : cmdenv.cc
	$(CXX) -c $(COPTS) cmdenv.cc

enumstr.o : enumstr.cc
	$(CXX) -c $(COPTS) enumstr.cc

heap.o : heap.cc
	$(CXX) -c $(COPTS) heap.cc

depend:
	makedepend -Y -I. -I../envir -I../sim -- *.cc
	makedepend -Y -I. -I../envir -I../sim -fmakefile.in -- *.cc

clean:
	rm -f *.o libcmdenv$(A_LIB_SUFFIX) libcmdenv$(SO_LIB_SUFFIX)

# DO NOT DELETE THIS LINE -- make depend depends on it.

cmdenv.o: cmdenv.h ../sim/ctypes.h ../sim/chead.h ../sim/cobject.h
cmdenv.o: ../sim/defs.h ../sim/util.h ../sim/csimul.h ../sim/errmsg.h
cmdenv.o: ../sim/cmsgheap.h ../sim/coutvect.h ../sim/ccor.h
cmdenv.o: ../envir/omnetapp.h ../sim/carray.h ../sim/cenvir.h enumstr.h
cmdenv.o: ../envir/slaveapp.h ../envir/cinifile.h ../sim/cmodule.h
cmdenv.o: ../sim/cqueue.h ../sim/cgate.h ../sim/cnetmod.h ../envir/args.h
enumstr.o: enumstr.h
