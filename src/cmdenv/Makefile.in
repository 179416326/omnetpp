#
# Definitions to be customized by 'configure'
#
CXX=@CXX@
AR=@AR@
MAKE_SO=@MAKE_SO@

CFLAGS=@CFLAGS@

OMNETPP_ROOT=@OMNETPP_ROOT@
OMNETPP_SRC_DIR=@OMNETPP_SRC_DIR@
OMNETPP_INCL_PATH=@OMNETPP_INCL_PATH@

LIB_SUFFIX=@LIB_SUFFIX@

#
# Local definitions
#
ENVIR_INCL_PATH=-I../envir

COPTS=$(CLFAGS) $(OMNETPP_INCL_PATH) $(ENVIR_INCL_PATH)

OBJS = cmdenv.o enumstr.o heap.o

#
# Targets
#
all : libcmdenv.$(LIB_SUFFIX)

libcmdenv.a : $(OBJS)
	$(AR) libcmdenv.a $(OBJS)

libcmdenv.so : $(OBJS)
	$(MAKE_SO) libcmdenv.so $(OBJS)

cmdenv.o : cmdenv.cc
	$(CXX) -c $(COPTS) cmdenv.cc

enumstr.o : enumstr.cc
	$(CXX) -c $(COPTS) enumstr.cc

heap.o : heap.cc
	$(CXX) -c $(COPTS) heap.cc

depend:
	makedepend -Y -I. -I../envir -I../sim -- *.cc

clean:
	rm -f *.o libcmdenv.a libcmdenv.so

# DO NOT DELETE THIS LINE -- make depend depends on it.


