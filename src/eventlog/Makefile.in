#
# Definitions to be customized by 'configure'
#
CXX=@CXX@
AR=@AR@
SHLIB_LD=@SHLIB_LD@
RANLIB=@RANLIB@
MAKEDEPEND=@MAKEDEPEND@

CFLAGS=@CFLAGS@

OMNETPP_INCL_DIR=@OMNETPP_INCL_DIR@
OMNETPP_LIB_DIR=@OMNETPP_LIB_DIR@

OMNETPP_VERSION=@OMNETPP_VERSION@
OMNETPP_EDITION=@OMNETPP_EDITION@

# LIB_SUFFIX is either A_LIB_SUFFIX or SO_LIB_SUFFIX
LIB_SUFFIX=@LIB_SUFFIX@

A_LIB_SUFFIX=@A_LIB_SUFFIX@
SO_LIB_SUFFIX=@SO_LIB_SUFFIX@

#
# Local definitions
#
COPTS=$(CFLAGS) -I. -I../common -I../../include

OBJS= ievent.o ieventlog.o eventlogfacade.o eventlog.o eventlogindex.o messagedependency.o event.o eventlogentry.o eventlogentries.o filteredevent.o filteredeventlog.o eventlogentryfactory.o stringpool.o

#
# Automatic rules
#
.SUFFIXES : .cc

.cc.o:
	$(CXX) -c $(COPTS) -o $@ $<

#
# Targets
#
all: eventlog$(LIB_SUFFIX)

eventlog$(A_LIB_SUFFIX) : $(OBJS)
	$(AR) eventlog$(A_LIB_SUFFIX) $(OBJS)
	$(RANLIB) eventlog$(A_LIB_SUFFIX)
	../utils/install-lib eventlog$(A_LIB_SUFFIX).$(OMNETPP_VERSION) $(OMNETPP_LIB_DIR) eventlog$(A_LIB_SUFFIX)
eventlog$(SO_LIB_SUFFIX) : $(OBJS)
	$(SHLIB_LD) -o eventlog$(SO_LIB_SUFFIX) $(OBJS)
	../utils/install-lib eventlog$(SO_LIB_SUFFIX).$(OMNETPP_VERSION) $(OMNETPP_LIB_DIR) eventlog$(SO_LIB_SUFFIX)

depend:
	$(MAKEDEPEND) -I. -I../envir -I../../include -- *.cc
	$(MAKEDEPEND) -I. -I../envir -I../../include -fMakefile.in -- *.cc

clean:
	rm -f *.o eventlog$(A_LIB_SUFFIX) eventlog$(SO_LIB_SUFFIX)
