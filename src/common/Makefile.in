#
# Definitions to be customized by 'configure'
#
CXX=@CXX@
AR=@AR@
SHLIB_LD=@SHLIB_LD@
RANLIB=@RANLIB@
MAKEDEPEND=@MAKEDEPEND@

OMNETPP_INCL_DIR=@OMNETPP_INCL_DIR@
OMNETPP_LIB_DIR=@OMNETPP_LIB_DIR@

OMNETPP_VERSION=@OMNETPP_VERSION@
OMNETPP_EDITION=@OMNETPP_EDITION@

CFLAGS=@CFLAGS@
AKAROA_CFLAGS=@AKAROA_CFLAGS@

# LIB_SUFFIX is either A_LIB_SUFFIX or SO_LIB_SUFFIX
LIB_SUFFIX=@LIB_SUFFIX@

A_LIB_SUFFIX=@A_LIB_SUFFIX@
SO_LIB_SUFFIX=@SO_LIB_SUFFIX@


#
# Local definitions
#
COPTS=$(CFLAGS)

OBJS= patmatch.o filetokenizer.o filereader.o linetokenizer.o stringtokenizer.o util.o exception.o

#
# Automatic rules
#
.SUFFIXES : .cc

.cc.o:
	$(CXX) -c $(COPTS) -o $@ $<

#
# Targets
#
all : libcommon$(LIB_SUFFIX)

libcommon$(A_LIB_SUFFIX) : $(OBJS)
	$(AR) libcommon$(A_LIB_SUFFIX) $(OBJS)
	$(RANLIB) libcommon$(A_LIB_SUFFIX)
	../utils/install-lib libcommon$(A_LIB_SUFFIX).$(OMNETPP_VERSION) $(OMNETPP_LIB_DIR) libcommon$(A_LIB_SUFFIX)

libcommon$(SO_LIB_SUFFIX) : $(OBJS)
	$(SHLIB_LD) -o libcommon$(SO_LIB_SUFFIX) $(OBJS)
	../utils/install-lib libcommon$(SO_LIB_SUFFIX).$(OMNETPP_VERSION) $(OMNETPP_LIB_DIR) libcommon$(SO_LIB_SUFFIX)

depend:
	$(MAKEDEPEND) -I.  -- *.cc
	$(MAKEDEPEND) -I. -fMakefile.in -- *.cc

clean:
	rm -f *.o libcommon$(A_LIB_SUFFIX) libcommon$(SO_LIB_SUFFIX)

