  geometry.h \
  forcedirectedparametersbase.h \
  layoutdefs.h
$O/forcedirectedgraphlayouter.obj: forcedirectedgraphlayouter.cc \
  forcedirectedgraphlayouter.h \
  startreeembedding.h \
  heapembedding.h \
  graphlayouter.h \
  forcedirectedembedding.h \
  forcedirectedparameters.h \
  graphcomponent.h \
