#!/bin/sh
#
# mklinks: create/update soft links into lib/
#

OMNETPP_ROOT="/home/andras/omnetpp"

cd $OMNETPP_ROOT

# Create a lib/ directory
if [ ! -d lib ]; then
   mkdir lib; 
fi
cd lib

# update soft links
ln -f -s ../src/sim/libsim_std.a .
ln -f -s ../src/sim/libsim_std.so .
ln -f -s ../src/sim/libsim_pvm.a .
ln -f -s ../src/sim/libsim_pvm.so .
ln -f -s ../src/envir/libenvir.a .
ln -f -s ../src/envir/libenvir.so .
ln -f -s ../src/envir/cmdenv/libcmdenv.a .
ln -f -s ../src/envir/cmdenv/libcmdenv.so .
ln -f -s ../src/envir/tkenv/libtkenv.a .
ln -f -s ../src/envir/tkenv/libtkenv.so .
ln -f -s ../src/envir/tvenv/libtvenv.a .
ln -f -s ../src/envir/tvenv/libtvenv.so .
cd ..

# Remove useless soft links
rm -rf `find lib/ -type l -and -not -xtype f`

