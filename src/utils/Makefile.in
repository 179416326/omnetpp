#
# variables set by `configure':
#
CXX=@CXX@
CC=@CC@

CFLAGS=@CFLAGS@
LDFLAGS=@LDFLAGS@
EXE_SUFFIX=@EXE_SUFFIX@

COPTS=$(CFLAGS)

OMNETPP_BIN_DIR=@OMNETPP_BIN_DIR@

all: seedtool tcl2c

seedtool : seedtool.cc
	$(CXX) seedtool.cc -o seedtool

tcl2c: tcl2c.c
	$(CC) tcl2c.c -o tcl2c

depend:
	makedepend -Y -I. -- *.cc
	makedepend -Y -I. -fMakefile.in -- *.cc

clean:
	rm -f *.o seedtool$(EXE_SUFFIX) tcl2c$(EXE_SUFFIX)

install-local: seedtool
	../utils/install-prog seedtool $(OMNETPP_BIN_DIR)
	(dir=`pwd`;cd $(OMNETPP_BIN_DIR);rm -f makemake;ln -s $$dir/makemake .)
	(dir=`pwd`;cd $(OMNETPP_BIN_DIR);rm -f splitvec;ln -s $$dir/splitvec .)

